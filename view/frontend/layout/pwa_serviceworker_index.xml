<?xml version="1.0"?>
<page layout="pwa" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="root">
            <block class="MageSuite\Pwa\Block\Data" name="pwa.service-worker" template="MageSuite_Pwa::service-worker.phtml">
                <arguments>
                    <argument xsi:type="object" name="view_model">MageSuite\Pwa\Model\Data\ViewModel</argument>
                </arguments>
                <block class="MageSuite\Pwa\Block\Data" name="pwa.service-worker.workbox" template="MageSuite_Pwa::service-worker/workbox.phtml"/>
                <block class="MageSuite\Pwa\Block\Data" name="pwa.service-worker.google-fonts" template="MageSuite_Pwa::service-worker/google-fonts.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
